style.css file

  
  body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background: #f4f4f4;
    color: #333;
  }
  
  header {
    background: #333;
    color: #fff;
    padding: 1rem;
    text-align: center;
  }
  
  nav a {
    color: #ffffff;
    margin: 0 1rem;
    text-decoration: none;
  }
  
  section {
    padding: 2rem;
    background: #fff;
    margin: 1rem auto;
    max-width: 800px;
    border-radius: 8px;
  }
  
  .project {
    margin-bottom: 1rem;
  }
  
  form input, form textarea {
    width: 100%;
    padding: 0.5rem;
    margin: 0.5rem 0;
  }
  
  button {
    padding: 0.7rem 1.5rem;
    background: #333;
    color: #fff;
    border: none;
    cursor: pointer;
  }
  
  footer {
    text-align: center;
    padding: 1rem;
    background: #333;
    color: #fff;
    margin-top: 2rem;
  }
  
  /* Responsive Design */
  @media (max-width: 600px) {
    nav a {
      display: block;
      margin: 0.5rem 0;
    }
  
    section {
      padding: 1rem;
    }
  }
